{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "typeRoots": ["../node_modules/@types"],
        "types":["node"],
        "noImplicitAny": false,
        "moduleResolution": "node",
        "esModuleInterop": true
    },
    "include": [
        "server/**/*.ts",
        "server/*.ts",
    ],
    "exclude": ["node_modules"],
    "compileOnSave": true,
    "buildOnSave": true
  }