{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    //   "typeRoots": ["../node_modules/@types"], error with jest
    //    "types": ["node"], error with jest
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true
  },
  "include": ["src/", "src/**/*"],
  "exclude": ["node_modules"],
  "compileOnSave": true,
  "buildOnSave": true
}
